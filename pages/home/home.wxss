@import "../guide/guide.wxss";

.home {  
  position: absolute;  
  width: 750rpx;  
  height: 100%;  
  background-color: white;  
  z-index: 1;  
  transition: All 0.4s ease;  
  -webkit-transition: All 0.4s ease;  
} 

.placeholder{
  font-size: 28rpx;
  text-align: center;
  color: #000;
}

.search{
  border-radius: 14rpx;
  background-color: #f5f5f5;
  padding: 11rpx;
  margin-right: 20rpx;
}

.avatar{
  width: 62rpx;
  height: 62rpx;
  float: left;
  margin: 5rpx 15rpx 0 20rpx;
}


.header{
  width: 600rpx;
  margin: auto;
  height: 500rpx;
  margin-top: 15rpx;
}

.header image{
  width: 600rpx;
  height: 400rpx;
  border-radius: 15rpx;
}

.header_text{
  display: flex;
  flex-direction: row;
  padding: 8rpx 0 8rpx 0;
}

.hot{
  background-color: #1190fe;
  color: #fff;
  font-size: 30rpx; 
  padding: 8rpx;
  border-radius: 8rpx;
  margin-left: 150rpx;
}

.activity{
  font-size: 30rpx;
  margin-left: 20rpx;
  padding: 8rpx;
}

.post_container{
  margin: 0rpx 40rpx;
  border-bottom: 4px solid #e2e2e2;
  background-color: #fff;
  padding: 10rpx 0 15rpx 0;
}

.post_user{
  display: flex;
  flex-direction: row;
  padding-bottom: 6rpx;
  border-bottom: 1px solid #e2e2e2;
}

.post_user image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.post_user view{
  font-size: 26rpx;
  width: 300rpx;
}

.sort{
  margin:10rpx 0rpx;
}

.sort text{
  font-size:26rpx;
  margin-left:8rpx;
  padding:5rpx;
  border-radius: 4px;
}

.post_img{
  height:350rpx;
  width:100%;
  border-radius: 15rpx;
  margin: auto;
}

.inf view{
  font-size:26rpx;
  color:#999;
}


.news{
  display: flex;
  flex-direction: row;
  margin: 30rpx 40rpx;
  border-bottom: 4rpx solid #e2e2e2; 
  padding: 10rpx 0 5rpx 0;
}

.news image{
  width: 40rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.news view{
  font-size: 28rpx;
  margin-left: 20rpx;
}