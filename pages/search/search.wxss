/* pages/search/search.wxss */
@import "../../wxSearchView/wxSearchView.wxss";


.post_container{
  margin: 0rpx 40rpx;
  border-bottom: 4px solid #e2e2e2;
}

.post_user{
  display: flex;
  flex-direction: row;
  padding-bottom: 6rpx;
  border-bottom: 1px solid #e2e2e2;
}

.post_user image{
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.post_user view{
  font-size: 26rpx;
}

.sort{
  margin:10rpx 0rpx;
}

.sort text{
  font-size:26rpx;
  margin-left:8rpx;
  padding:5rpx;
  border-radius: 4px;
}

.post_img{
  height:350rpx;
  width:100%;
  border-radius: 15rpx;
  margin: auto;
}

.inf view{
  font-size:26rpx;
  color:#999;
}
